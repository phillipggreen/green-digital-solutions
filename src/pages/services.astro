      <div class="relative">
        <!-- Vertical Line -->
        <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-0.5 bg-primary/30 transform -translate-x-1/2"></div>
  
        <!-- Steps -->
        <div class="space-y-16 relative">
          <!-- Step 1 -->
          <div class="md:flex md:items-center">
            <div class="md:w-1/2 md:pr-12 text-right mb-8 md:mb-0">
