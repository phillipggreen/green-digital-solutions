---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <!-- Hero Section -->
  <section class="relative bg-dark text-cream py-16 px-6 overflow-hidden">
    <!-- Background pattern - subtle grid -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(#22a39f 1px, transparent 1px); background-size: 20px 20px;"></div>
    </div>
    
    <div class="max-w-6xl mx-auto text-center relative z-10">
      <h2 class="text-4xl font-bold mb-6">Services</h2>
      <div class="h-1 w-20 bg-primary mx-auto mb-8"></div>
      <p class="text-lg text-cream/90 max-w-2xl mx-auto">
        I offer custom-tailored digital services designed to help small businesses thrive online.
      </p>
    </div>
  </section>

  <!-- Services Grid Section with Enhanced Cards -->
  <section class="bg-cream py-16 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="grid gap-8 md:grid-cols-2">
        <!-- Service Card 1 - Website Development -->
        <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition-all duration-300 border-t-4 border-primary">
