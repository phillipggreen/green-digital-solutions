---
import MainLayout from "../layouts/MainLayout.astro";
import TestimonialSlider from "../components/TestimonialSlider.astro";
---

<MainLayout>
  <!-- Hero Section -->
  <section class="relative bg-dark text-sand py-24 px-4 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(#22a39f 1px, transparent 1px); background-size: 20px 20px;"></div>
    </div>

    <div class="max-w-6xl mx-auto relative z-10">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Welcome to <span class="text-primary">Green Digital</span> Solutions
        </h1>
        <p class="text-xl text-sand/90 mb-10 leading-relaxed">
          We craft sleek, high-performance websites that help small businesses grow and stand out online.
        </p>
        <a
          href="/contact"
          class="inline-block bg-primary text-dark px-8 py-4 rounded-lg font-semibold text-lg shadow-lg hover:bg-primary/90 hover:-translate-y-1 transition-all duration-300"
        >
          Get a Free Quote
        </a>
      </div>
    </div>
  </section>

  <!-- Services Section -->
<section class="py-20 px-4 bg-sand">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-dark mb-4">Our Services</h2>
      <p class="text-lg text-dark/70 max-w-2xl mx-auto">
        Custom-tailored digital solutions designed to help your business thrive online.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-3">
      <!-- Website Development -->
      <div class="bg-cream p-8 rounded-lg shadow-md border-t-4 border-primary hover:shadow-xl transition-all duration-300">
        <div class="text-4xl text-primary mb-4">
          <i class="fas fa-code"></i>
        </div>
        <h3 class="text-xl font-semibold text-dark mb-3">Website Development</h3>
        <p class="text-dark/80">
          Custom-built websites that are fast, responsive, and aligned with your brand â€” no templates, just clean code.
        </p>
      </div>

      <!-- Logo Design -->
      <div class="bg-cream p-8 rounded-lg shadow-md border-t-4 border-primary hover:shadow-xl transition-all duration-300">
        <div class="text-4xl text-primary mb-4">
          <i class="fas fa-paint-brush"></i>
        </div>
        <h3 class="text-xl font-semibold text-dark mb-3">Logo Design</h3>
        <p class="text-dark/80">
          Clean, modern logos crafted to capture your business identity and stand out from the crowd.
        </p>
      </div>

      <!-- SEO Optimization -->
      <div class="bg-cream p-8 rounded-lg shadow-md border-t-4 border-primary hover:shadow-xl transition-all duration-300">
        <div class="text-4xl text-primary mb-4">
          <i class="fas fa-rocket"></i>
        </div>
        <h3 class="text-xl font-semibold text-dark mb-3">SEO Optimization</h3>
        <p class="text-dark/80">
          Boost your visibility on search engines with optimized content, structure, and performance tuning.
        </p>
      </div>
    </div>

    <div class="text-center mt-12">
      <a href="/services" class="inline-flex items-center text-primary font-semibold hover:underline">
        View all services
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

  <!-- Process Section -->
  <section class="pt-0 pb-20 px-4 bg-sand">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-dark mb-4">How We Work</h2>
        <p class="text-lg text-dark/70 max-w-2xl mx-auto">
          A simple, effective process to bring your digital vision to life.
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-4">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary text-dark rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">1</div>
          <h3 class="text-xl font-semibold text-dark mb-2">Discovery</h3>
          <p class="text-dark/70">We learn about your business goals and requirements</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary text-dark rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">2</div>
          <h3 class="text-xl font-semibold text-dark mb-2">Planning</h3>
          <p class="text-dark/70">We create a detailed roadmap for your project</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary text-dark rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">3</div>
          <h3 class="text-xl font-semibold text-dark mb-2">Creation</h3>
          <p class="text-dark/70">We build your solution with careful attention to detail</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary text-dark rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">4</div>
          <h3 class="text-xl font-semibold text-dark mb-2">Launch</h3>
          <p class="text-dark/70">We deploy your project and provide ongoing support</p>
        </div>
      </div>
    </div>
  </section>

  <!-- âœ… Testimonials (Component-Based) -->
  <TestimonialSlider />

  <!-- CTA -->
  <section class="py-16 px-4 bg-primary text-dark">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6">Ready to Grow Your Online Presence?</h2>
      <p class="text-xl mb-8">
        Let's work together to create a digital solution that helps your business thrive.
      </p>
      <a
        href="/contact"
        class="inline-block bg-dark text-sand px-8 py-4 rounded-lg font-semibold shadow-lg hover:bg-dark/90 hover:-translate-y-1 transition-all duration-300"
      >
        Get Started Today
      </a>
    </div>
  </section>
  <!-- ðŸ”§ Include Swiper logic -->
  <script type="module" src="/js/testimonial-slider.js" defer></script>
</MainLayout>
